mixin dropdown-menu
    div(class="select")
        input(class="select__input" type="text" placeholder="дополнительные удобства")
        img(class="select__img" src=require('/src/images/dropdown-menu-arrow.svg'))
        div(class="select__dropdown")
            +checkbox("Завтрак")
            +checkbox("Письменный стол")
            +checkbox("Стул для кормления")
            +checkbox("Кроватка")
            +checkbox("Телевизор")
            +checkbox("Шампунь")
            +checkbox("Телевизор")
            +checkbox("Шампунь")

mixin dropdown-second(place)
    div(class="drop")
        input(class="drop__input" type="text" placeholder=`${place}` id="comfort")
        img(class="drop__img" src=require('/src/images/dropdown-menu-arrow.svg'))
        div(class="drop__dropdown" id="dropdown")
            +howManyComfort("спальни","кровати","ванные комнаты")(class="guests__comfots")

mixin dropdown-guests(place)
    div(class="drop" class!=attributes.class)
        input(class="drop__input" class!=attributes.class type="text" placeholder=`${place}` id="howManyGuests" value)
        img(class="drop__img" src=require('/src/images/dropdown-menu-arrow.svg'))
        div(class="drop__dropdown" id="dropdown")
            +howManyGuests("взрослые","дети","младенцы")(class="guests__num")

mixin dropdown-calendar(place,id)
    div(class="drop" class!=attributes.class)
        input(class="drop__input" type="text" placeholder=`${place}` id="drop-calendar")
        img(class="drop__img" src=require('/src/images/dropdown-menu-arrow.svg'))
        div(class="drop__dropdown" id="dropdown")
            +calendar(class="wrapper-active")

mixin booking
    div(class="booking" class!=attributes.class)
        h1 Найдём номера под ваши пожелания
        div(class="booking__box")
            div(class="booking__start")
                h3(class="booking__text") прибытие
                +default-textfield("ДД.ММ.ГГГГ","start")(class="booking__input")
            div(class="booking__end")
                h3(class="booking__text") выезд
                +default-textfield("ДД.ММ.ГГГГ","end")(class="booking__input")
            h3(class="booking__text") гости
        +dropdown-guests("Сколько гостей")(class="drop-hero")(class="drop-hero__input")
        +button({span:"подобрать номер", size:"stretching"},"a","sign-in.pug")(class="booking__button")

mixin calendar
    div(class="wrapper" class!=attributes.class)
        header
            p.current-date
        div(class="icons")
            //- span(id="prev" class="left" src=require('/src/images/Logo.svg') alt='logo')
            //- span(id="prev" class="left" src=require('/src/images/Logo.svg') alt='logo')
        .calendar
            ul.weeks
                li Пн
                li Вт
                li Ср
                li Чт
                li Пт
                li Сб
                li Вс
            ul.days
            .buttons
                button(class="btn__delete btn-reset") очистить
                button(class="btn__submit btn-reset") применить

