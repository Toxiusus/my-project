mixin default-textfield(name,id)
    div(class="default-textfield")
        input(class="default-textfield__input input-reset" class!=attributes.class placeholder=`${name}` type="text" id=`${id}`)

mixin inputEmail(imagename)
    div(class="default-textfield")
        input(class="default-textfield__input input-reset" type="text" placeholder="E-mail")
        div(class="default-textfield__box")
            img.src(class="comfort__img" src=require(`../src/images/${imagename}.svg`) alt=name)


mixin howManyGuests(firtsname,secondname,thirdname)
    div(class="select-menu")
    div(class="guests")
        div(class="guests__box")
            p(class="guests__text") #{firtsname}
            div(class="guests__count")
                span(class="guests__minus guests__increment" id="minusAdults") -
                span(id="numAdults" class!=attributes.class) 0
                span(class="guests__plus guests__increment" id="plusAdults") +
        div(class="guests__box")
            p(class="guests__text") #{secondname}
            div(class="guests__count")
                span(class="guests__minus guests__increment" id="minusChildren") -
                span(id="minusChildren" class!=attributes.class) 0
                span(class="guests__plus guests__increment" id="minusChildren") +
        div(class="guests__box")
            p(class="guests__text") #{thirdname}
            div(class="guests__count")
                span(class="guests__minus guests__increment" id="minusInfants") -
                span(id="numInfants" class!=attributes.class) 0
                span(class="guests__plus guests__increment" id="plusInfants") +
        div(class="guests__btns")
            button(class="guests__btn btn-reset" id="guestsDelete") очистить
            button(class="guests__btn btn-reset" id="guestsSubmit") применить

